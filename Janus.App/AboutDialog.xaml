<Window x:Class="Janus.App.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Event Pinpointer" Height="220" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Event Pinpointer" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="BranchText" Text="Branch: " FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="ShaText" Text="Commit: " FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="DateText" Text="Commit Date: " FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Project Janus - Windows Event Log Diagnostic Tool" Margin="0,0,0,10"/>
            <TextBlock Text="Copyright Â© 2025 Janus Team" Margin="0,0,0,10"/>
            <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="OnOkClick"/>
        </StackPanel>
    </Grid>
</Window>
