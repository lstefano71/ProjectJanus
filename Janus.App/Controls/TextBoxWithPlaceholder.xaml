<UserControl x:Class="Janus.App.Controls.TextBoxWithPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="200">
    <Grid>
        <TextBox x:Name="PART_TextBox"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Background="{DynamicResource ControlBackgroundBrush}"
                 Foreground="{DynamicResource ControlForegroundBrush}"
                 BorderThickness="1"
                 VerticalContentAlignment="Center"
                 GotKeyboardFocus="PART_TextBox_GotKeyboardFocus"
                 KeyDown="PART_TextBox_KeyDown"/>
        <TextBlock x:Name="PART_Placeholder"
                   Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="#888"
                   Margin="6,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>
