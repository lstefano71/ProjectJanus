<Window x:Class="Janus.App.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Project Janus"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Opacity="0">
  <Window.Triggers>
    <EventTrigger RoutedEvent="Window.Loaded">
      <BeginStoryboard>
        <Storyboard>
          <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4" />
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </Window.Triggers>
  <Grid Margin="20">
    <StackPanel>
      <Control Template="{StaticResource JanusLogoIcon}" Width="48" Height="48" Margin="0,0,0,10" HorizontalAlignment="Center"/>
      <TextBlock Text="Project Janus" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
      <TextBlock Text="Windows Event Log Diagnostic Tool" Margin="0,0,0,10"/>
      <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="16" Margin="0,0,0,10"/>
      <TextBlock x:Name="BranchText" Text="Branch: " FontSize="14" Margin="0,0,0,5"/>
      <TextBlock x:Name="ShaText" Text="Commit: " FontSize="14" Margin="0,0,0,5"/>
      <TextBlock x:Name="DateText" Text="Commit Date: " FontSize="14" Margin="0,0,0,2"/>
      <TextBlock x:Name="SysInfoText" Text="System: " FontSize="12" Margin="0,0,0,10"/>

      <Button Content="Copy Info" Width="90" HorizontalAlignment="Left" Margin="0,0,0,10" Click="OnCopyInfoClick" TabIndex="0"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
        <TextBlock Margin="0,0,8,0">
                    <Hyperlink NavigateUri="https://github.com/lstefano71/ProjectJanus/" RequestNavigate="OnLinkClick">Homepage</Hyperlink>
        </TextBlock>
        <TextBlock Margin="0,0,8,0">
                    <Hyperlink NavigateUri="https://github.com/lstefano71/ProjectJanus/blob/main/docs/prd/ProjectJanus.md" RequestNavigate="OnLinkClick">Docs</Hyperlink>
        </TextBlock>
      </StackPanel>
      <TextBlock Text="Copyright Â© 2025 WildHeart Productions" Margin="0,0,0,10"/>
      <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="OnOkClick" IsDefault="True" IsCancel="True" TabIndex="1"/>
    </StackPanel>
  </Grid>
</Window>
