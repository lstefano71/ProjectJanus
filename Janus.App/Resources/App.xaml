<Application x:Class="Janus.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Janus.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <!-- Default control brushes for app-wide use -->
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="ControlBorderBrush" Color="#CCC"/>
        <SolidColorBrush x:Key="ControlForegroundBrush" Color="Black"/>
    </Application.Resources>
</Application>
