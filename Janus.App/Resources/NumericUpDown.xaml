<UserControl x:Class="Janus.App.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="30" Width="60">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="ValueBox" Text="{Binding Value, Mode=TwoWay}" Grid.Column="0" VerticalAlignment="Center"
                 GotKeyboardFocus="ValueBox_GotKeyboardFocus" PreviewMouseLeftButtonDown="ValueBox_PreviewMouseLeftButtonDown"/>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Content="▲" Command="{Binding IncrementCommand}" Height="14"/>
            <Button Content="▼" Command="{Binding DecrementCommand}" Height="14"/>
        </StackPanel>
    </Grid>
</UserControl>
